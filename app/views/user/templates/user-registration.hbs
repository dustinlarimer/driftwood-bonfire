<div style="margin: 0 auto; width: 400px">

<h2>Create your profile</h2>

<div>
  <label for="name">Name</label><br/>
  <input id="name" type="text" value="{{display_name}}">
</div><br/>

<div>
  <label for="handle">Handle</label><br/>
  <input id="handle" type="text" value="{{handle}}">
	<br/><small>http://ideavis.co/{{handle}}</small>
</div><br/>

<div>
  <label for="about">About</label><br/>
  <textarea id="about">{{about}}</textarea>
</div><br/>

<div>
  <label for="location">Location</label><br/>
  <input id="location" type="text" value="{{location}}">
</div><br/>

<div>
  <label for="url">URL</label><br/>
  <input id="url" type="text" value="{{url}}">
</div><br/>

<div>
  <button type="submit">Submit</button>
</div>

</div>